{
  "name": "node-server",
  "private": true,
  "version": "0.1.0",
  "main": "index.js",
  "scripts": {
    "start": "cd dist && node server",
    "dev": "run-p watch start-demon",
    "start-demon": "cd dist && nodemon server.js",
    "build": "run-s build:*",
    "build:css": "postcss styles/*.css --dir dist/",
    "build:js": "webpack",
    "watch": "run-p watch:*",
    "watch:css": "yarn build:css -- --watch",
    "watch:js": "yarn build:js -- --watch"
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.15.3",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "amphtml-validator": "^1.0.20",
    "babel-core": "^6.25.0",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.24.1",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^4.1.0",
    "postcss-csso": "^2.0.0",
    "raw-loader": "^0.5.1",
    "webpack": "^3.0.0",
    "webpack-node-externals": "^1.6.0"
  }
}
